{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["src/**/*.ts"]
	},
	"overrides": [
		{
			"includes": ["dist", "coverage"],
			"linter": {
				"enabled": false
			}
		},
		{
			"includes": ["src/__mocks__/**"],
			"linter": {
				"enabled": false
			}
		},
		{
			"includes": ["**/*.test.ts", "test/**"],
			"linter": {
				"enabled": false
			}
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"lineWidth": 120
		}
	}
}
